<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_loadingMulti"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMultiBackground"
    android:gravity="center"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_loadingMulti"
        android:layout_width="@dimen/dp_multi_loading_size"
        android:layout_height="@dimen/dp_multi_loading_size"
        android:indeterminateTint="@color/colorMultiProgress"
        android:indeterminateTintMode="src_atop"/>

    <TextView
        android:id="@+id/tv_loadingMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_multi_margin"
        android:gravity="center"
        android:text="@string/fast_multi_loading"
        android:textColor="@color/colorMultiText"
        android:textSize="@dimen/dp_multi_text_size"/>

</LinearLayout>